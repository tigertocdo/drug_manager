<%= render 'layouts/messages' %>
<div id="errors" class="container">
    <br>
    <%= render "users/shared/error_messages", resource: @category %>
</div>
<div class="container">
    <div class="form-input">
        <h1 class="mt-5" align="center"><%= @category.new_record? == true ? 'Tạo Mới' : 'Cập Nhật' %> Loại Sản Phẩm</h1>
        <%= form_for [:admins,@category] , html: { multipart: true },remote: true ,authenticity_token: true do |f| %>
        <br>
        <label>Tên Loại Sản Phẩm</label>
        <%= f.text_field :name, class: 'form-control mb-1',placeholder: "nhập tên loại sản phẩm",minlength:"3"%>
        <div class="form-actions mt-3">
            <%= f.submit  @category.new_record? == true ? 'Tạo Mới' : 'Cập Nhật' , class: 'btn btn-success btn-block' %>
        </div>
        <% end %>
    </div>
</div>
</div>